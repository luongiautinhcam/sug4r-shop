# =============================================================================
# sug4r-shop Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to source control.
# =============================================================================

# --- Database ---
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sug4r_shop_dev

# --- Encryption ---
# 32-byte AES-256 key, hex-encoded (64 hex characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY_V1=

# --- Sessions ---
# Random string for cookie signing (32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# --- Admin Seed (used only by db:seed script) ---
ADMIN_INITIAL_EMAIL=admin@example.com
ADMIN_INITIAL_PASSWORD=

# --- Site Configuration ---
NEXT_PUBLIC_SITE_NAME="Sugar Shop"
NEXT_PUBLIC_SITE_URL=http://localhost:3000
DEFAULT_CURRENCY=USD

# --- Session Configuration ---
SESSION_MAX_AGE_HOURS=24

# --- Delivery Configuration ---
DELIVERY_TOKEN_EXPIRY_HOURS=48
DELIVERY_MAX_REVEALS=1

# --- Stripe (optional) ---
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# --- Cloudflare Turnstile (optional) ---
# TURNSTILE_ENABLED=false
# TURNSTILE_SITE_KEY=
# TURNSTILE_SECRET_KEY=

# --- Admin IP Allowlist (optional, comma-separated CIDRs) ---
# ADMIN_ALLOWED_IPS=

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true

# --- Logging ---
LOG_LEVEL=info
